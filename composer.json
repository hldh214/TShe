{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "SocialiteProviders/Weixin-Web": "^3.0",
        "cweagans/composer-patches": "~1.0",
        "encore/laravel-admin": "^1.5",
        "fideloper/proxy": "~3.3",
        "gloudemans/shoppingcart": "^2.4",
        "laravel-admin-ext/helpers": "^1.0",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "overtrue/laravel-lang": "~3.0",
        "socialiteproviders/qq": "^3.0",
        "yansongda/laravel-pay": "^1.0",
        "yansongda/pay": "^1.2"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "orangehill/iseed": "dev-master",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "laravel": {
            "dont-discover": [
            ]
        },
        "patches": {
            "gloudemans/shoppingcart": {
                "Revised fix for missing timestamp": "patches/311.diff"
            },
            "encore/laravel-admin": {
                "asked by client 4 copyleft": "patches/copyleft.diff"
            }
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
